{
  "name": "cursor-2d-video-editor",
  "private": true,
  "version": "1.1.0",
  "description": "A powerful video editor for creating cursor animations and video overlays with Manim support",
  "author": "Yash Pinjarkar <yashpinjarkar2003@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yashpinjarkar10/Cursor_2D_Animation.git"
  },
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "electron:dev": "vite --mode electron",
    "electron:start": "electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "build:all": "vite build && electron-builder --win --mac --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.cursor2d.videoeditor",
    "productName": "Cursor 2D Video Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "config.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer",
        "to": "ffmpeg",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/fluent-ffmpeg/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Video",
      "maintainer": "Yash Pinjarkar <yashpinjarkar2003@gmail.com>",
      "vendor": "Yash Pinjarkar"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cursor 2D Video Editor"
    },
    "dmg": {
      "title": "Cursor 2D Video Editor",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "axios": "^1.13.2",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}